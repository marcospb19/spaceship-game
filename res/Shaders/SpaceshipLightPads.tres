shader_type canvas_item;

void fragment()
{
	float time = TIME * 1.8;
	vec4 color = texture(TEXTURE , UV);
	color.r = 0.0;
	color.b = 0.9 - 0.15 * abs(sin(time));
	color.g = 0.8 - 0.30 * abs(sin(time));
	COLOR = color;
}
